@{
    ViewData["Title"] = "Grade Calculator";
    ViewData["Text"] = "Let's see that GPA!";
}
@model GraderModel;


<!--This form is submitted to the js file-->
<!--The asp-for is used for the model called GraderModel, which will ensure the entries for the form are btwn 0-100-->
<h2>Grade Calculator: </h2>
<form method="post">
    <label>Assignments:</label>
    <input type="number" id="assignment" asp-for="Assignments"/><br />
    <label>Group Project:</label>
    <input type="number" id="group" asp-for="Group"/><br />
    <label>Quizzes:</label>
    <input type="number" id="quizzes" asp-for="Quizzes"/><br />
    <label>Midterm Exam:</label>
    <input type="number" id="midterm" asp-for="Midterm"/><br />
    <label>Final Exam:</label>
    <input type="number" id="final" asp-for="Final"/><br />
    <label>INTEX:</label>
    <input type="number" id="intex" asp-for="Intex"/>
    <p id="totalGrade"></p><br /> <!--This is where the final grade will go using the id, changed in the js file-->
    <input id="calcGrade" type="submit" value="Submit" />

    <!--this tells the user what is wrong with the form if it is not accepted (data validation)-->
    <div asp-validation-summary="All"></div>
</form>
<!--including jquery, js file, bootstrap-->
<script src="~/js/Grades.js"></script>
